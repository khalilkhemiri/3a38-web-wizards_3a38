{% extends 'base_magasin.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
 <div id="hero" class="d-flex justify-content-center align-items-center">
        <div class="container position-relative" data-aos="fade-up" data-aos-delay="100">
    <h1>Categorie </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.nom }}</td>
                <td>
                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">modifier</a>  {{ include('categorie/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categorie_new') }}">Ajouter </a>
    </div>
     </div>
     <style>
    #hero {
    margin-bottom: 0;
    height: 100vh;
  }
     #hero h1 {
    font-size: 28px;
    line-height: 36px;
  }

  #hero .container {
    padding-bottom: 63px;
  }
    </style>
{% endblock %}
