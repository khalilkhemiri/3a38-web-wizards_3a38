{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>image</th>
                <td>
                <img src="{{asset('assets/images/') ~ produit.image ~ ".jpg"}}" width="70%" />
                </td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            
            <tr>
                <th>Stock</th>
                <td>{{ produit.stock }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_produit_index') }}">retour a la liste</a>

    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">modifier</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
